const argv = require('yargs')
    .option('b',{
        alias: 'base',
        type: 'number',
        demandOption: true,
        describe: 'Es la base de la multplicaciÃ³n'
    })
    .option('l',{
        alias: 'listar',
        type: 'boolean',
        default: false,
        describe: 'Mostrar tabla en consola'
    })
    .option('h',{
        alias: 'hasta',
        type: 'number',
        default: 10,
        describe: 'Hasta que numero multiplicar'
    })
    .check((argv, options) =>{
        if(isNaN(argv.base)){
            throw('La base tiene que se un numero');
        }
        return true;
    })
    .argv;

module.exports = argv;